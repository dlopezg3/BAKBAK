<div class="container">

  <h1><%= @product_size.product.name %></h1>
  <p><%= @product_size.size %></p>
  <p><%= @product_size.price %></p>
  <p><%= @product_size.cost %></p>

  <div class="d-flex align-content">
    <%= link_to "Volver", product_path(@product), class: "btn btn-primary" %>
    <%= link_to "Editar", edit_product_product_size_path(@product, @product_size), class: "btn btn-secondary" %>
    <%= link_to 'Delete Product Size', product_product_size_path(@product, @product_size),
              method: :delete,
              data: { confirm: 'Are you sure you want to delete this product size?' },
              class: "btn btn-secondary" %>
  </div>

</div>
